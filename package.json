{
  "name": "goldengoose",
  "version": "1.0.0",
  "description": "A hexagonal grid game with 3D transformations",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "type-check": "tsc --noEmit",
    "docker:start": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 start",
    "docker:stop": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 stop",
    "docker:restart": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 restart",
    "docker:rebuild": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 rebuild",
    "docker:logs": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 logs",
    "docker:shell": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 shell",
    "docker:clean": "powershell -ExecutionPolicy Bypass -File ./scripts/docker-dev.ps1 clean"
  },
  "dependencies": {
    "@react-three/drei": "^9.89.0",
    "@react-three/fiber": "^8.15.12",
    "honeycomb-grid": "^4.1.5",
    "three": "^0.157.0"
  },
  "devDependencies": {
    "@svgdotjs/svg.js": "^3.2.0",
    "@types/node": "^24.1.0",
    "@types/three": "^0.157.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "abstract-astar": "^0.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-dts": "^3.5.1",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  }
}
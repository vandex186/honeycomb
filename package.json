{
  "name": "goldengoose",
  "version": "1.0.0",
  "description": "A hexagonal grid game with 3D transformations",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build --config vite.web.config.ts",
    "build:lib": "vite build --config vite.config.ts",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/*.test.ts\"",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "lint:run": "eslint \"src/**/*.ts\" --ignore-pattern \"**/*.test.ts\"",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "type-check": "tsc --noEmit",
    "docker:start": "task docker:start",
    "docker:stop": "task docker:stop",
    "docker:restart": "task docker:restart",
    "docker:rebuild": "task docker:rebuild",
    "docker:logs": "task docker:logs",
    "docker:shell": "task docker:shell",
    "docker:clean": "task docker:clean",
    "docker:build": "task docker:build",
    "gitpod:test-hosts": "node scripts/test-gitpod-hosts.js"
  },
  "dependencies": {
    "@react-three/drei": "^9.89.0",
    "@react-three/fiber": "^8.15.12",
    "honeycomb-grid": "^4.1.5",
    "three": "^0.157.0"
  },
  "devDependencies": {
    "@svgdotjs/svg.js": "^3.2.0",
    "@types/node": "^24.1.0",
    "@types/three": "^0.157.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "abstract-astar": "^0.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-dts": "^3.5.1",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  }
}

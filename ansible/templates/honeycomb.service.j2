[Unit]
Description=Honeycomb Vite Application
After=network.target

[Service]
Type=simple
User={{ app_user }}
WorkingDirectory={{ app_dir }}
ExecStart=/usr/bin/pnpm run preview --host 0.0.0.0 --port {{ app_port }}
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT={{ app_port }}

[Install]
WantedBy=multi-user.target 